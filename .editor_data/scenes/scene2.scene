        linear: [0, 0, 0]
        angular: [0, 0, 1]
      - type: RenderableComponent
        mesh_id: 0
        texture_id: 0
  - id: 3
    name: Viking Room
    components:
      - type: LocalTransformComponent
        position: [-1, 0.5, 0]
        rotation: [1, 0, 0, 0]
        scale: [1, 1, 1]
      - type: ParentComponent
        parent_id: 2
      - type: VelocityComponent
        linear: [0, 0, 0]
        angular: [0, 0, 1]
      - type: RenderableComponent
        mesh_id: 1
        texture_id: 1