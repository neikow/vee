        position: [0, 0.15, 3]
        rotation: [0.8944272, 0.4472136, 0, 0]
        scale: [1, 1, 1]
      - type: ActiveCameraTagComponent
  - id: 2
    name: Apple
    components:
      - type: LocalTransformComponent
        position: [1, 0, 0]
        rotation: [1, 0, 0, 0]
        scale: [2, 2, 2]
